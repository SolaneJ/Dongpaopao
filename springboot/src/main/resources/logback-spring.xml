<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 定义日志输出格式 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>
    
    <!-- 定义日志文件的存储路径 -->
    <property name="LOG_FILE_PATH" value="logs"/>
    <property name="LOG_FILE_NAME" value="dongpaopao"/>
    
    <!-- 滚动文件输出 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 日志文件路径 -->
        <file>${LOG_FILE_PATH}/${LOG_FILE_NAME}.log</file>
        
        <!-- 滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 归档的日志文件路径 -->
            <fileNamePattern>${LOG_FILE_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 单个日志文件最大大小 -->
            <maxFileSize>10MB</maxFileSize>
            <!-- 日志文件保留天数 -->
            <maxHistory>7</maxHistory>
            <!-- 总日志大小上限 -->
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- 错误日志滚动文件输出 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 日志文件路径 -->
        <file>${LOG_FILE_PATH}/${LOG_FILE_NAME}-error.log</file>
        
        <!-- 只记录ERROR级别以上的日志 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        
        <!-- 滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 归档的日志文件路径 -->
            <fileNamePattern>${LOG_FILE_PATH}/${LOG_FILE_NAME}-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- 单个日志文件最大大小 -->
            <maxFileSize>5MB</maxFileSize>
            <!-- 日志文件保留天数 -->
            <maxHistory>14</maxHistory>
            <!-- 总日志大小上限 -->
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- 设置日志级别 -->
    <logger name="com.github.solanej" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- Spring相关日志配置 -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- MyBatis相关日志配置 -->
    <logger name="org.mybatis" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- 数据库访问相关日志配置 -->
    <logger name="org.hibernate" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- 设置根日志级别 -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
    
    <!-- 针对开发环境的特定配置 -->
    <springProfile name="dev">
        <logger name="com.github.solanej" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>
    
    <!-- 针对生产环境的特定配置 -->
    <springProfile name="prod">
        <logger name="com.github.solanej" level="INFO"/>
        <logger name="org.springframework.web" level="WARN"/>
    </springProfile>
</configuration>